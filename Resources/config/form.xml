<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mqm_shop.form.product.class">MQM\ShopBundle\Form\Shop\ProductType</parameter>    
        <parameter key="mqm_shop.form.category.class">MQM\ShopBundle\Form\Shop\CategoryType</parameter>
        <parameter key="mqm_shop.form.pretty_price.class">MQM\ShopBundle\Form\Shop\PrettyPriceType</parameter>
        <parameter key="mqm_shop.form.time_discountRule.class">MQM\ShopBundle\Form\Shop\TimeDiscountRuleType</parameter>
    </parameters>

    <services>
        <service id="mqm_shop.form.product" class="%mqm_shop.form.product.class%" public="true">
            <tag name="form.type" alias="mqm_shop.form.product" />
            <argument type="service" id="doctrine"/>
        </service>
        
        <service id="mqm_shop.form.category" class="%mqm_shop.form.category.class%" public="true">
            <tag name="form.type" alias="mqm_shop.form.category" />
            <argument type="service" id="doctrine"/>
        </service>
        
        <service id="mqm_shop.form.pretty_price" class="%mqm_shop.form.pretty_price.class%" public="true">
            <argument type="service" id="mqm_tools.utils" />
            <tag name="form.type" alias="mqm_shop.form.pretty_price" />
        </service>
        
        <service id="mqm_shop.form.time_discountRule" class="%mqm_shop.form.time_discountRule.class%" public="true">
            <tag name="form.type" alias="mqm_shop.form.time_discountRule" />
        </service>        
    </services>

</container>
