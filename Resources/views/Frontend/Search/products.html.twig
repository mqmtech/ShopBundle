{% extends 'MQMShopBundle:Frontend:layout.html.twig' %}

{% set title = '| Tecnokey | Busqueda |' %}
{% if search is defined and search.name is defined %}
{% set title = '| Busqueda | ' ~ search.name ~ ' |'%}
{% endif %}
{% block title %} {{ title }}{% endblock %}

{% block menu %}<!--start header-->
        {% include 'MQMShopBundle:Frontend:menu.partialhtml.twig' with {'menu' : 'productos'} %}
{% endblock %}

{% block treeContainer %}
    <!--start arbol-->
    <div class="arbol_container">
        <div class="arbol">
            <div class="arboltext">
                {% block contextualThree %}<a href="{{ path('TKShopFrontendIndex') }}">Inicio</a> {% if search is defined %} \ Resultado de la busqueda: "{{ search.name }}" {% endif %}\
                {% endblock %}
            </div>
        </div>
            
            {% include 'MQMShopBundle:Frontend:orderBy.partialhtml.twig'%}
    </div>
    <!--end arbol-->
{% endblock treeContainer %}



{% block left %}
    {% render path('TKShopFrontendCategoriesShowAllFamilies', {'_format': 'partialhtml'}) | mqm_shop_to_app_path %}
{% endblock %}

{% block right_content %}
{#<div class="right">#}
        {% include 'MQMShopBundle:Frontend/Product:showAll.partialhtml.twig'%}
{#</div>#}
{% endblock right_content %}